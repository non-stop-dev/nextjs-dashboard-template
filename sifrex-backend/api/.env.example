# Sifrex Authentication API Environment Variables
# Copy this file to .env and fill in your values

# Application Settings
DEBUG=true
APP_NAME="Sifrex Authentication API"

# Database Configuration
# Replace with your actual PostgreSQL connection string
DATABASE_URL="postgresql://user:password@localhost:5432/sifrex_db"
DATABASE_SCHEMA="sifrex_users"
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# Security Settings
# Generate a secure random secret key (32+ characters)
SECRET_KEY="your-super-secret-key-here-minimum-32-characters"
ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Password Security
PASSWORD_MIN_LENGTH=8
PASSWORD_HASH_ROUNDS=12

# Rate Limiting
RATE_LIMIT_LOGIN_ATTEMPTS=5
RATE_LIMIT_WINDOW_MINUTES=15
RATE_LIMIT_PASSWORD_RESET=3
RATE_LIMIT_PASSWORD_WINDOW_HOURS=1

# CORS and Security
ALLOWED_ORIGINS="http://localhost:3000,http://localhost:3001"
ALLOWED_HOSTS="localhost,127.0.0.1"

# Application URLs
FRONTEND_URL="http://localhost:3000"
API_URL="http://localhost:8000"

# Email Configuration (Optional - for future implementation)
EMAIL_BACKEND="console"  # console, smtp, sendgrid, ses
SMTP_HOST=""
SMTP_PORT=587
SMTP_USERNAME=""
SMTP_PASSWORD=""
SMTP_USE_TLS=true

# SendGrid (Optional)
SENDGRID_API_KEY=""

# AWS SES (Optional)
AWS_ACCESS_KEY_ID=""
AWS_SECRET_ACCESS_KEY=""
AWS_REGION="us-east-1"

# File Storage
STORAGE_BACKEND="local"  # local, s3
STORAGE_LOCAL_PATH="./storage"
AWS_S3_BUCKET=""

# Monitoring and Logging
LOG_LEVEL="INFO"
SENTRY_DSN=""